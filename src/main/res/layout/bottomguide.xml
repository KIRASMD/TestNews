<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:layout_alignParentBottom="true"
				android:background="@color/colorPrimary"
	>

	<ImageButton
		android:id="@+id/img_button1"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="30dp"
		android:background="@drawable/bottom_xiaoxin"/>

	<ImageButton
		android:id="@+id/img_button2"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_centerInParent="true"
		android:background="@drawable/bottom_shiro"/>

	<ImageButton
		android:id="@+id/img_button3"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dp"


		android:background="@drawable/bottom_himawari"/>
</RelativeLayout>